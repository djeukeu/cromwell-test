{
  "name": "cromwell-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "node dist/server.js",
    "start:dev": "env-cmd -f .env.development nodemon",
    "build": "tsc && resolve-tspaths",
    "pretty": "yarn prettier --write ./src/**/* ",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "dev-db": "env-cmd -f .env.development docker-compose up -d",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:dev": "env-cmd -f .env.development prisma migrate dev --name development",
    "prisma:reset": "prisma migrate reset"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/convict": "^6.1.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lodash": "^4.14.202",
    "@types/ms": "^0.7.34",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "prisma": "^5.10.2",
    "resolve-tspaths": "^0.8.18",
    "tsc-node": "^0.0.3",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@prisma/client": "^5.10.2",
    "bcryptjs": "^2.4.3",
    "convict": "^6.2.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "env-cmd": "^10.1.0",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "ms": "^2.1.3"
  }
}
